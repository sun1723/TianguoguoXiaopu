.img-box {
  width: 250rpx;
  height: 240rpx; 
}

.img-box .image {
  width: 100px;
  height: 100px;
  border-radius: 2px;
}

.goods-title {
  padding:3px;
  width: 100%;
  min-height: 35rpx;
  font-size: 28rpx;
  text-align: left;
  padding-top: 5rpx;
  color: black;
  box-sizing: border-box;
}

 .goods-price-box {
  width: 430rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
  padding:3px;
}

.goods-price-box .goods-originalPrice {
  font-size: 28rpx;
  font-weight: bold;
  color:  #ff4422;
}
